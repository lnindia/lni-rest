<div class="row card">
	<div class="card-header">
		<div class="text-center">
			<h1 class="title">Local News of India</h1>
			<hr />
		</div>
	</div>
	<div class="card-body">
		<form class="form-horizontal" method="post" action="#">

			<div class="form-group">
				<label for="name" class="col">Name</label>
				<div class="col">
					<div class="input-group">
						<input type="text" class="form-control" name="name" id="name"
							placeholder="Enter your Name" />
					</div>
				</div>
			</div>

			<div class="form-group">
				<label for="fathername" class="col">Father's Name</label>
				<div class="col">
					<div class="input-group">
						<input type="text" class="form-control" name="fathername"
							id="fathername" placeholder="Enter your Father's Name" />
					</div>
				</div>
			</div>
			
			<div class="form-group">
				<label for="email" class="col">Email</label>
				<div class="col">
					<div class="input-group">
						<input type="email" class="form-control" name="email" id="email"
							placeholder="Enter your Email-id" />
					</div>
				</div>
			</div>
			
			<div class="form-group">
				<label for="dob" class="col">Contact Number</label>
				<div class="col">
					<div class="input-group">
						<input type="number" class="form-control" name="contact" id="contact"
							placeholder="Enter your Contact Number" />
					</div>
				</div>
			</div>

			<div class="form-group">
				<label for="dob" class="col">Date of Birth</label>
				<div class="col">
					<div class="input-group">
						<input type="text" class="form-control" name="dob" id="dob"
							placeholder="Enter your DOB" />
					</div>
				</div>
			</div>

			<div class="form-group">
				<label for="Gender" class="col">Gender</label>
				<div class="col">
					<div class="input-group">
						<label class="radio-inline"> 
						<input type="radio"	name="gender" checked>Male
						</label> 
						<label class="radio-inline">
						 <input type="radio" name="gender">Female
						</label>
						
					</div>
				</div>
			</div>
			
			<div class="form-group">
				<label for="marital" class="col">Marital Status</label>
				<div class="col">
					<div class="input-group">
						<label class="radio-inline"> 
						<input type="radio"	name="marital" checked>Married
						</label> 
						<label class="radio-inline">
						 <input type="radio" name="marital">Single
						</label>
						<label class="radio-inline">
						 <input type="radio" name="marital">Divorce
						</label>
						
					</div>
				</div>
			</div>
			
			<div class="form-group">
				<label for="education" class="col">Higher Education</label>
				<div class="col">
					<div class="input-group">
						<input type="text" class="form-control" name="Education" id="Education"
							placeholder="Enter your Higher Education" />
					</div>
				</div>
			</div>
			
			<div class="form-group">
				<label for="experience" class="col">Journalism Experience</label>
				<div class="col">
					<div class="input-group">
						<input type="number" class="form-control" name="experience" id="experience"
							placeholder="Enter your experience" />
					</div>
				</div>
			</div>
			
			<div class="form-group">
				<label for="aadhar" class="col">Aadhar Number</label>
				<div class="col">
					<div class="input-group">
						<input type="number" class="form-control" name="aadhar" id="aadhar"
							placeholder="Enter your Adhar Number" />
					</div>
				</div>
			</div>
			
			<div class="form-group">
				<label for="pan" class="col">Pan Number </label>
				<div class="col">
					<div class="input-group">
						<input type="number" class="form-control" name="experience" id="experience"
							placeholder="Enter your experience" />
					</div>
				</div>
			</div>

			<div class="form-group ">
				<button type="button"
					class="btn btn-primary btn-lg btn-block login-button">Register</button>
			</div>

		</form>
	</div>
</div>